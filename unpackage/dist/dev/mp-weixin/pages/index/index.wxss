.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: var(--status-bar-height);
  padding-bottom: 32rpx;
}
.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: var(--status-bar-height);
  background: #ffffff;
  border-bottom: rgba(39, 40, 50, 0.1) 1px solid;
}
.top-bar-left {
  float: left;
  padding-left: 32rpx;
}
.top-bar-left image {
  margin-top: 10rpx;
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
}
.top-bar-between {
  float: left;
  position: absolute;
  text-align: center;
  left: 0;
  right: 0;
  margin: auto;
  top: 0;
  bottom: 0;
}
.top-bar-between image {
  padding-top: var(--status-bar-height);
  width: 88rpx;
  height: 42rpx;
}
.top-bar-right {
  float: right;
  padding-right: 14rpx;
}
.top-bar-right .search {
  width: 88rpx;
  height: 88rpx;
  display: inline-block;
}
.top-bar-right .add {
  width: 88rpx;
  height: 88rpx;
  display: inline-block;
}
.top-bar-right image {
  padding: 18rpx 0 0 18rpx;
  width: 52rpx;
  height: 52rpx;
}
.main {
  padding-top: 104rpx;
}
.friend-list {
  height: 96rpx;
  padding: 16rpx 32rpx;
}
.friend-list:active {
  background-color: #f3f4f6;
}
.friend-list .friend-list-l {
  position: relative;
  float: left;
}
.friend-list .friend-list-l image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 28rpx;
  background-color: #ffe431;
}
.friend-list .friend-list-l .tip {
  position: absolute;
  z-index: 10;
  top: -6rpx;
  left: 68rpx;
  min-width: 36rpx;
  height: 36rpx;
  background: #ff5d5b;
  border-radius: 50%;
  font-size: 24rpx;
  color: #fff;
  line-height: 36rpx;
  text-align: center;
}
.friend-list .friend-list-r {
  padding-left: 128rpx;
}
.friend-list .friend-list-r .top {
  height: 58rpx;
}
.friend-list .friend-list-r .top .time {
  float: right;
  color: rgba(39, 40, 50, 0.4);
  font-size: 24rpx;
  line-height: 50rpx;
}
.friend-list .friend-list-r .top .name {
  float: left;
  color: #272833;
  line-height: 50rpx;
  font-size: 36rpx;
  font-weight: 400;
}
.friend-list .friend-list-r .news {
  line-height: 40rpx;
  font-size: 28rpx;
  color: rgba(39, 40, 50, 0.6);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}