.content {
  padding-top: var(--status-bar-height);
}
.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: var(--status-bar-height);
  background: #ffffff;
  border-bottom: rgba(39, 40, 50, 0.1) 1px solid;
}
.top-bar-right {
  float: right;
  padding-right: 14rpx;
}
.top-bar-right .text {
  font-size: 32rpx;
  font-weight: 500;
  color: #272833;
  line-height: 88rpx;
}
.logo {
  text-align: center;
}
.logo image {
  padding-top: 256rpx;
  width: 194rpx;
  height: 92rpx;
  margin: 0 auto;
}
.main {
  padding: 54rpx 60rpx;
  width: 100%;
}
.main .main-text {
  font-size: 56rpx;
  font-weight: 500;
  color: #272833;
  line-height: 80rpx;
}
.main .slogan {
  font-size: 40rpx;
  color: rgba(39, 40, 50, 0.6);
  line-height: 56rpx;
}
.main .main-input {
  padding-top: 8rpx;
}
.main .main-input input {
  padding-top: 40rpx;
  height: 88rpx;
  font-size: 32rpx;
  color: #272833;
  line-height: 88rpx;
  border-bottom: rgba(39, 40, 50, 0.1) 1px solid;
}
.main .tips {
  float: left;
  font-size: 32rpx;
  color: #ff5d5b;
  lime-height: 56rpx;
}
.submit {
  margin: 0 auto;
  width: 520rpx;
  height: 96rpx;
  background: #ffe431;
  box-shadow: 0rpx 50rpx 32rpx -36rpx rgba(255, 228, 49, 0.4);
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #272833;
  line-height: 96rpx;
  text-align: center;
}